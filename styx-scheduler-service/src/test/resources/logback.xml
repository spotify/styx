<configuration>
  <root level="debug">
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
      <name>STDOUT</name>
      <encoder>
        <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
      </encoder>
    </appender>
  </root>

  <logger name="com.spotify.styx.state.handlers.TerminationHandler" level="info" />
</configuration>
